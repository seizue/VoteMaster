@{
    var user = Context.User.Identity;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VoteMaster</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <span class="brand-icon rounded-circle d-inline-flex align-items-center justify-content-center me-2"><i class="bi bi-check2-square fs-5"></i></span>
                <span class="fs-5 fw-semibold" style="color: var(--vm-text-primary);">VoteMaster</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (!(user?.IsAuthenticated ?? false))
                    {
                        <li class="nav-item"><a class="nav-link" href="/"><i class="bi bi-house me-1"></i>Home</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/"><i class="bi bi-house me-1"></i>Home</a></li>
                    }
                </ul>
                <div class="d-flex align-items-center">
                    @if (user?.IsAuthenticated ?? false)
                    {
                        <div class="me-3 small" style="color: var(--vm-text-secondary);">Signed in as <strong style="color: var(--vm-text-primary);">@Context.User.Identity?.Name</strong></div>
                        <a class="btn btn-sm me-2" href="/Account/Logout" style="background: var(--vm-bg); color: var(--vm-text-primary);"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-sm" href="/Account/Login"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Toast Container for Notifications -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="pollNotificationToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="bi bi-bell-fill me-2 text-primary"></i>
                <strong class="me-auto">Poll Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                <!-- Message will be inserted here -->
            </div>
        </div>
    </div>

    <footer class="mt-auto py-4">
        <div class="container text-center text-muted small">© @DateTime.UtcNow.Year VoteMaster — Simple modern voting</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Global SignalR connection for poll notifications
        @if (user?.IsAuthenticated ?? false)
        {
            <text>
            if (typeof signalR !== 'undefined') {
                const notificationConnection = new signalR.HubConnectionBuilder()
                    .withUrl("/hubs/results")
                    .withAutomaticReconnect()
                    .build();

                notificationConnection.on("PollStarted", function (pollId, pollTitle) {
                    showToast(`New poll started: ${pollTitle}`, `/Client/Vote/${pollId}`);
                });

                notificationConnection.on("PollEnded", function (pollId, pollTitle) {
                    showToast(`Poll ended: ${pollTitle}`, `/Client/Vote/${pollId}`);
                });

                notificationConnection.start()
                    .then(() => console.log("Notification hub connected"))
                    .catch(err => console.error("Notification hub error:", err));

                function showToast(message, link) {
                    const toastEl = document.getElementById('pollNotificationToast');
                    const toastBody = document.getElementById('toastMessage');
                    
                    if (link) {
                        toastBody.innerHTML = `${message} <a href="${link}" class="btn btn-sm btn-primary mt-2 w-100">View Poll</a>`;
                    } else {
                        toastBody.textContent = message;
                    }
                    
                    const toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                    toast.show();
                }
            }
            </text>
        }
    </script>
</body>
</html>
