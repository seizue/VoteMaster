@{
    var user = Context.User.Identity;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VoteMaster</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.js"></script>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">VoteMaster</a>
            <div class="d-flex text-white">
                @if (user?.IsAuthenticated ?? false)
                {
                    <span class="me-3">Hello, @Context.User.Identity?.Name</span>
                    <a class="btn btn-outline-light btn-sm" href="/Account/Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-outline-light btn-sm" href="/Account/Login">Login</a>
                }
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
