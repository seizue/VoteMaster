@{
    var user = Context.User.Identity;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VoteMaster</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .navbar { box-shadow: 0 2px 4px rgba(0,0,0,.1); }
        .card { transition: transform 0.2s; }
        .card:hover { transform: translateY(-2px); }
        .vote-option { 
            padding: 1rem;
            border-radius: 8px;
            background: #f8f9fa;
            margin: 0.5rem 0;
            transition: background-color 0.2s;
        }
        .vote-option:hover { background: #e9ecef; }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-check2-square me-2"></i>VoteMaster
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="bi bi-house me-1"></i>Home</a>
                    </li>
                    @if (user?.IsAuthenticated ?? false)                 
                    }
                </ul>
                
                <div class="d-flex align-items-center">
                    @if (user?.IsAuthenticated ?? false)
                    {
                        <span class="text-light me-3">
                            <i class="bi bi-person-circle me-1"></i>@Context.User.Identity?.Name
                        </span>
                        <a class="btn btn-outline-light btn-sm" href="/Account/Logout">
                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm" href="/Account/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
