@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<h3>Create Poll</h3>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control" name="title" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Options (comma-separated)</label>
        <input class="form-control" name="optionsCsv" placeholder="Option A, Option B, Option C" required />
    </div>
    <div class="mb-3">
        <label class="form-label" for="maxVotes">Maximum Votes Per Voter</label>
        <input type="number" class="form-control" id="maxVotes" name="maxVotesPerVoter" 
               value="1" min="1" required />
    </div>
    <div class="mb-3">
        <label class="form-label" for="minVotes">Minimum Votes Per Voter</label>
        <input type="number" class="form-control" id="minVotes" name="minVotesPerVoter" 
               value="1" min="1" required />
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="allowPublicResults" checked />
        <label class="form-check-label">Allow Public Results</label>
    </div>
    <button class="btn btn-primary">Create</button>
</form>
