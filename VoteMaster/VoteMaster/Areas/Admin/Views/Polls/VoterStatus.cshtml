@model List<VoteMaster.Services.VoterStatusDto>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    var poll = ViewBag.Poll as VoteMaster.Models.Poll;
}

<h2>Voter Status for Poll: @poll?.Title</h2>
<p><strong>Poll ID:</strong> @poll?.Id</p>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Registered Voters Status</h5>
        
        @if (Model == null || Model.Count == 0)
        {
            <p class="text-muted">No voters found.</p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Voting Status</th>
                        <th>Votes Cast</th>
                        <th>Status Badge</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var voter in Model.OrderByDescending(v => v.HasVoted).ThenBy(v => v.Username))
                    {
                        <tr>
                            <td>@voter.Username</td>
                            <td>
                                @if (voter.HasVoted)
                                {
                                    <span class="text-success fw-bold">✓ Voted</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">✗ Not Voted</span>
                                }
                            </td>
                            <td>@voter.VoteCount</td>
                            <td>
                                @if (voter.HasVoted)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3">
                <p><strong>Total Voters:</strong> @Model.Count</p>
                <p><strong>Voted:</strong> <span class="text-success">@Model.Count(v => v.HasVoted)</span></p>
                <p><strong>Not Voted:</strong> <span class="text-danger">@Model.Count(v => !v.HasVoted)</span></p>
                <p><strong>Voting Rate:</strong> @((Model.Count > 0 ? (Model.Count(v => v.HasVoted) * 100 / Model.Count) : 0))%</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Polls", new { area = "Admin" })" class="btn btn-secondary">Back to Polls</a>
</div>
