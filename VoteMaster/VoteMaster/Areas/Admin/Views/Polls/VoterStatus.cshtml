@model List<VoteMaster.Services.VoterStatusDto>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    var poll = ViewBag.Poll as VoteMaster.Models.Poll;
}

<div class="mb-4">
    <h3 class="mb-1" style="font-weight: 700; color: #0f172a;">
        <i class="bi bi-people-fill me-2"></i>Voter Status for Poll: @poll?.Title
    </h3>
    <p class="text-muted">Poll ID: @poll?.Id</p>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                No voters found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th style="width: 30%;">Username</th>
                            <th style="width: 25%;">Voting Status</th>
                            <th style="width: 20%;">Votes Cast</th>
                            <th style="width: 25%;">Status Badge</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var voter in Model.OrderByDescending(v => v.HasVoted).ThenBy(v => v.Username))
                        {
                            <tr>
                                <td class="align-middle fw-semibold" style="color: #1e293b;">@voter.Username</td>
                                <td class="align-middle">
                                    @if (voter.HasVoted)
                                    {
                                        <span class="text-success fw-semibold">
                                            <i class="bi bi-check-circle-fill me-1"></i>Voted
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-semibold">
                                            <i class="bi bi-x-circle-fill me-1"></i>Not Voted
                                        </span>
                                    }
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-light text-dark" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">
                                        @voter.VoteCount
                                    </span>
                                </td>
                                <td class="align-middle">
                                    @if (voter.HasVoted)
                                    {
                                        <span class="badge bg-success" style="font-size: 0.8125rem; padding: 0.5rem 0.75rem;">
                                            <i class="bi bi-check-lg me-1"></i>Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning" style="font-size: 0.8125rem; padding: 0.5rem 0.75rem;">
                                            <i class="bi bi-clock me-1"></i>Pending
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="border-top p-3 bg-light" style="border-radius: 0 0 1rem 1rem;">
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold" style="color: #475569;">Total Voters</span>
                            <span class="badge bg-primary" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">@Model.Count</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold" style="color: #475569;">Voted</span>
                            <span class="badge bg-success" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">@Model.Count(v => v.HasVoted)</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold" style="color: #475569;">Not Voted</span>
                            <span class="badge bg-danger" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">@Model.Count(v => !v.HasVoted)</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold" style="color: #475569;">Voting Rate</span>
                            <span class="badge bg-info" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">@((Model.Count > 0 ? (Model.Count(v => v.HasVoted) * 100 / Model.Count) : 0))%</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<style>
    @@media (max-width: 768px) {
        .table thead th {
            font-size: 0.8125rem;
            padding: 0.875rem 0.75rem;
        }
        .table tbody td {
            padding: 0.875rem 0.75rem;
        }
    }
</style>
