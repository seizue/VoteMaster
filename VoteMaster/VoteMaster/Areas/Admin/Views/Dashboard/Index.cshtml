@model IEnumerable<VoteMaster.Models.Poll>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<h3>Admin Dashboard</h3>
<a class="btn btn-success mb-3 w-100 w-sm-auto" href="/Admin/Polls/Create">Create Poll</a> 
<table class="table table-striped">
    <thead><tr><th>Title</th><th>Window</th><th>Actions</th></tr></thead>
    <tbody>
    @foreach (var p in Model) {
        <tr>
            <td>@p.Title</td>
            <td>@p.StartTime.ToLocalTime() - @p.EndTime.ToLocalTime()</td>
            <td>
                <div class="d-flex flex-column flex-sm-row gap-2 align-items-stretch align-items-sm-center">
                    <a class="btn btn-primary btn-sm w-100 w-sm-auto" href="/Admin/Polls/Results/@p.Id">Results</a>
                    <a class="btn btn-info btn-sm w-100 w-sm-auto" href="/Admin/Polls/VoterStatus/@p.Id">Voter Status</a>
                    <a class="btn btn-outline-primary btn-sm w-100 w-sm-auto" href="/Admin/Dashboard/ExportResults/@p.Id">Export</a>
                    <form method="post" action="/Admin/Polls/Delete/@p.Id" class="m-0 w-100 w-sm-auto">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm w-100 w-sm-auto" 
                                onclick="return confirm('Are you sure you want to delete this poll?')">Delete</button>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
<a class="btn btn-outline-secondary" href="/Admin/Users">Manage Users</a>
